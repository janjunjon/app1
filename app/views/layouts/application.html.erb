<% if is_logged_in? %>
    <% provide(:user, "#{current_user.name}さん") %>
<% end %>
<!DOCTYPE html>
<html>
<head>
  <title>Lagis卒論インデックス</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%= stylesheet_link_tag    'application', media: 'all',
                               'data-turbolinks-track': 'reload' %>
  <%= javascript_pack_tag 'application',
                               'data-turbolinks-track': 'reload' %>
</head>
<body>
  <header>
    <%= render 'layouts/flash' %>
    <div class="title">
      <div class="bubble two">
        <p><%= yield(:title) %></p>
      </div>
      <h1>Lagis卒論インデックス</h1>      
    </div>
  </header>
  <div class="all-wrapper">
    <nav>
      <div>
          <li class="nav-item active">
            <%= link_to 'トップページ', root_path, class: "nav-link" %>
          </li>
          <% if is_logged_in? %>
            <li class="nav-item active">
              <%= link_to yield(:user), user_path(current_user), class: "nav-link" %>
            </li>
            <li class="nav-item active">
              <%= link_to 'ログアウト', logout_path, method: :delete, class: "nav-link" %>
            </li>
          <% else %>
            <li class="nav-item disabled">
              <%= link_to 'ユーザーなし', '#', class: "nav-link disabled" %>
            </li>
            <li class="nav-item active">
              <%= link_to 'ログイン', login_path, class: "nav-link" %>
            </li>
          <% end %>
          <li class="nav-item active">
            <%= link_to '論文一覧', articles_path, class: "nav-link" %>
          </li>
          <li class="nav-item active">
            <%= link_to 'ユーザー一覧', users_path, class: "nav-link" %>
          </li>
      </div>
    </nav>
    <main>
      <%= yield %>
      <%= debug(params) if Rails.env.development? %>
    </main>
  </div>
  <!--<footer>footer</footer>-->
</body>
</html>