<% provide(:title, 'トップページ') %>
<div class="page-title">
    <h2>NEWS</h2>
</div>
<div class="top-page">
    <dl>
        <% @news.each do |news| %>
            <div class="news-contents">
                <dt>
                    <p><%= news.created_at.strftime("%Y/%m/%d") %></p>
                </dt>
                <%= link_to news.title, '#', class: news.info %>
                <dd><%= link_to news.contents, '#' %></dd>
            </div>
        <% end %>
    </dl>
    <p><%= link_to 'past News', news_past_path, class: "past-news-link" %></p>
